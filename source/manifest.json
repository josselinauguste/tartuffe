{
  "name": "Tartuffe",
  "version": "1.0.0",
  "description": "hide all those ugly Google+ notification bars.",
  "manifest_version": 2,
  "content_scripts": [
      {
          "matches": [ "*://*.google.com/*", "*://*.google.fr/*", "*://*.youtube.com/*" ],
          "css": [ "tartuffe.css" ],
          "js": [ "tartuffe.js" ],
          "run_at": "document_end"
      }
  ],
  "web_accessible_resources": ["inbox-zero.png"]
}
